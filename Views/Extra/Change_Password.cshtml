@model Web_Application_Higher_Institution.table_user

@{
    ViewBag.Title = "Change_Password";
    Layout = "~/Views/Shared/_Layout_Stud.cshtml";
}
<br />
<h2>User Module</h2>
<h4 class="text-center text-info">Edit/ Manage Password</h4>
<hr />
<h5 class="text-center text-danger">@ViewBag.Result</h5>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal col-lg-7" style="float:none; margin: 0 auto;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      
        <div class="form-group">
            @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               <input type="password" name="password1" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Confirm Password</label>
            <div class="col-md-10">
                <input type="password" name="password2" class="form-control">
            </div>
        </div>
               
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save Password" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
