@model IEnumerable<Web_Application_Higher_Institution.table_students>

@{
    ViewBag.Title = "Index";
}

<br />
<h2>Students' Module</h2>
<h4 class="text-center text-info">Current List of Students</h4>
<hr />

<p>
    @Html.ActionLink("Register Student", "Create")
</p>
<table class="table table-bordered table-condensed table-hover table-responsive table-striped text-center">
    <tr>
       
        <th class="text-center">
            Student's Name
        </th>
        <th class="text-center">
           Matric/ Admission No.
        </th>       
        <th class="text-center">
            Faculty
        </th>
        <th class="text-center">
            Department
        </th>
        <th class="text-center">
           Program
        </th>
        <th class="text-center">
           Mode of Study
        </th>
        <th class="text-center">
           Campus
        </th>
      
        <th class="text-center">
            Status
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
      
        <td>
            @Html.DisplayFor(modelItem => item.student_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.matric_no)
        </td>      
        <td>
            @Html.DisplayFor(modelItem => item.faculty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.department)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.program)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.campus)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.p_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.p_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.p_id })
        </td>
    </tr>
}

</table>
