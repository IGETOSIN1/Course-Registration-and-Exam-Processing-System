@model Web_Application_Higher_Institution.table_department_add

@{
    ViewBag.Title = "Create";
}

<br/><h2>Dept. Module</h2>

<h4 class="text-center text-info">Add/ Confirm New Department</h4>
<hr />
<h5 class="text-center text-danger">@ViewBag.Result</h5>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal col-lg-6" style="float: none; margin: 0 auto;">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class = "control-label col-md-2">Faculty</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.faculty, (IEnumerable<SelectListItem>)ViewBag.facult, "Select", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.faculty, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Department</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.department, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.department, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirm Department" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
